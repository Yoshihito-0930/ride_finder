<!-- マップを表示する要素 -->
<div id="map" style="height: 600px;"></div>

<script>
function initMap() {
  const defaultLocation = { lat: 35.6803997, lng: 139.7690174 }; // 東京の座標
  const mapOptions = {
    center: defaultLocation, // 初期値として東京を設定
    zoom: 10
  };

  const map = new google.maps.Map(document.getElementById('map'), mapOptions);

  /*
  document.querySelector('form').addEventListener('submit', function(event) {
    event.preventDefault();
    const selectedCategory = document.querySelector('select[name="category"]').value;
    searchPlaces(map, selectedCategory);
  });
  */

  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(
      function(position) {
        const pos = {
          lat: position.coords.latitude,
          lng: position.coords.longitude
        };
        map.setCenter(pos); // 現在地を中心に設定
      },
      function() {
        // 現在地の取得に失敗した場合は東京を中心に設定
        map.setCenter(defaultLocation);
      }
    );
  } else {
    // Geolocationがサポートされていない場合は東京を中心に設定
    map.setCenter(defaultLocation);
  }
}

